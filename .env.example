# Grok 垃圾信息识别配置（示例）
GROK_API_KEY=your_grok_api_key
GROK_API_URL=https://your-grok-endpoint/v1/chat/completions
GROK_MODEL=grok-4.1-expert


# Grok 请求超时时间（毫秒）
GROK_TIMEOUT_MS=12000

# 在线人机题目（Grok 自动出题）开关
QUIZ_GROK_ENABLED=true

# Grok 垃圾识别是否启用图片视觉（仅图片；视频不走视觉）
GROK_VISION_ENABLED=true

# Grok 图片识别最大下载字节数（建议 262144 ~ 3145728）
GROK_IMAGE_MAX_BYTES=1048576
