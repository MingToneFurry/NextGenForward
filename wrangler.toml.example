name = "your-worker-name"
main = "worker.js"
compatibility_date = "2026-01-15"

# Optional for local wrangler deploy. Not required for Git integration deploy.
# account_id = "your_cloudflare_account_id"

# Required binding used by worker.js
[[kv_namespaces]]
binding = "TOPIC_MAP"
id = "your_kv_namespace_id"
preview_id = "your_kv_namespace_preview_id"

[vars]
# Required non-secret config
API_BASE = "https://api.telegram.org"
SUPERGROUP_ID = "-1001234567890"
WORKER_URL = "https://your-worker.workers.dev/"

# Optional non-secret config
ADMIN_IDS = "123456789,987654321"
RUBBISH_TOPIC_TITLE = "rubbish"
LOG_TOPIC_TITLE = "log"
VERIFIED_TTL_SECONDS = "86400"

# Grok optional non-secret config
GROK_API_URL = "https://your-grok-endpoint/v1/chat/completions"
GROK_MODEL = "grok-4.1-fast"
GROK_TIMEOUT_MS = "12000"
QUIZ_GROK_ENABLED = "true"
GROK_VISION_ENABLED = "true"
GROK_IMAGE_MAX_BYTES = "1048576"

# Turnstile optional non-secret config
CF_TURNSTILE_SITE_KEY = "your_turnstile_site_key"
TURNSTILE_ALLOWED_HOSTNAMES = "your-worker.workers.dev"
TURNSTILE_ACTION = "tg_verify"

# Secrets are NOT stored here. Set these in Cloudflare Dashboard:
# BOT_TOKEN
# WEBHOOK_SECRET
# GROK_API_KEY
# CF_TURNSTILE_SECRET_KEY
# VERIFY_SIGNING_SECRET
